<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#FAC1C1" android:startColor="#FAC1C1" />
            <stroke android:width="2dp" android:color="#FAC1C1" />
            <corners android:radius="20dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#FF8282" android:startColor="#FF8282" />
            <stroke android:width="2dp" android:color="#FF8282" />
            <corners android:radius="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#FF8282" android:startColor="#FF8282" />
            <stroke android:width="2dp" android:color="#FF8282" />
            <corners android:radius="20dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <!-- default -->
</selector>