<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#373E95" android:startColor="#373E95" />
            <stroke android:width="2dp" android:color="#373E95" />
            <corners android:radius="20dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#584DE3" android:startColor="#584DE3" />
            <stroke android:width="2dp" android:color="#584DE3" />
            <corners android:radius="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient android:angle="90" android:endColor="@color/white" android:startColor="@color/white" />
            <stroke android:width="2dp" android:color="#584DE3" />
            <corners android:radius="20dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <!-- default -->
</selector>