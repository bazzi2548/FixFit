<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CaptureActivity">


    <!--    상단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/title_bar">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/oval_style" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_tech_neck"
                app:tint="@color/main_color_1" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/cafe24_ssurround"
            android:gravity="center"
            android:text="거북목 판정"
            android:textColor="@color/black"
            android:textSize="27sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_logo_fixfit"
            app:tint="@color/white" />

    </LinearLayout>


    <!--    불러온 사진 이미지뷰-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/capture_img"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:src="@drawable/no_photo"/>

    </LinearLayout>


    <!-- 다시 촬영하기, 거북목 판정하러 가기 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/capture_btn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="다시 촬영하기"
            android:fontFamily="@font/cafe24_ssurround_air"
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>

        <Button
            android:id="@+id/classifier_btn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="거북목 판정하러 가기"
            android:fontFamily="@font/cafe24_ssurround_air"
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>

    </LinearLayout>

</LinearLayout>