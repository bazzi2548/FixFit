<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="vertical">
    <TextView
        android:text="123456"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:id="@+id/schedule_one_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=""
        android:textSize="8sp"
        android:layout_gravity="center"
        android:id="@+id/schedule_one_date_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="2dp"
        android:background="@color/schedule_one_1"
        android:id="@+id/schedule_one_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <View
        android:background="@color/schedule_one_2"
        android:layout_marginTop="2dp"
        android:id="@+id/schedule_one_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <View
        android:background="@color/schedule_one_3"
        android:layout_marginTop="2dp"
        android:id="@+id/schedule_one_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <View
        android:background="@color/schedule_one_4"
        android:layout_marginTop="5dp"
        android:id="@+id/schedule_one_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>