<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GalleryActivity">


    <!--    상단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/title_bar">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_style" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:padding="7dp"
                android:src="@drawable/ic_tech_neck"
                app:tint="@color/main_color_1" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/suncheon_b"
            android:gravity="center"
            android:text="거북목 판정"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </LinearLayout>


    <!--    불러온 사진 이미지뷰-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gallery_img"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:src="@drawable/no_photo"/>

    </LinearLayout>


    <!--    갤러리에서 불러오기, 거북목 판정하러 가기 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="갤러리에서 불러오기"
            android:fontFamily="@font/suncheon_b"
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:textSize="20sp"
            android:textColor="#584DE3"
            android:background="@drawable/button_drawer"/>

        <Button
            android:id="@+id/classifier_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="거북목 판정하러 가기"
            android:fontFamily="@font/suncheon_b"
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:textSize="20sp"
            android:textColor="#584DE3"
            android:background="@drawable/button_drawer"/>

    </LinearLayout>

</LinearLayout>