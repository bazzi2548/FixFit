<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <Spinner
        android:id="@+id/dialog_register_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dialog_register_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suncheon_b"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <Button
            android:id="@+id/dialog_register_n1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawer"
            android:fontFamily="@font/suncheon_b"
            android:text="탄수화물"
            android:textColor="#584DE3" />

        <Button
            android:id="@+id/dialog_register_n2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawer"
            android:fontFamily="@font/suncheon_b"
            android:text="지방"
            android:textColor="#584DE3" />

        <Button
            android:id="@+id/dialog_register_n3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawer"
            android:fontFamily="@font/suncheon_b"
            android:text="단백질"
            android:textColor="#584DE3" />

        <Button
            android:id="@+id/dialog_register_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawer"
            android:fontFamily="@font/suncheon_b"
            android:text="취소"
            android:textColor="#584DE3" />

    </LinearLayout>
</LinearLayout>