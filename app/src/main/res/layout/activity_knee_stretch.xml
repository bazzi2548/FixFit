<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    상단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/title_bar">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_style" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:padding="7dp"
                android:src="@drawable/ic_rehabilitation"
                app:tint="@color/main_color_1" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/suncheon_b"
            android:gravity="center"
            android:text="자세 교정 &amp; 재활 치료"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/suncheon_b"
            android:text="운동 이름"
            android:textColor="@color/text_color"
            android:textSize="22sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/workout_img"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/knee_stretch_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/suncheon_r"
                android:lineSpacingExtra="10dp"
                android:text="골반을 세우고 의자에 앉아서 한쪽 다리를 앞으로 쭉 뻗는다."
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/knee_stretch_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/suncheon_r"
                android:lineSpacingExtra="10dp"
                android:text="발 끝을 몸쪽으로 당기고(플렉스), 다시 발끝을 펴준다(포인트). 무릎 위치는 고정한 채 허벅지 앞쪽에 힘을 주고 무릎 안쪽을 늘어나는 느낌을 준다."
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/knee_stretch_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/suncheon_r"
                android:lineSpacingExtra="10dp"
                android:text="길게 접은 수건으로 발 앞꿈치를 감싼다. 수건을 양손으로 잡고 몸쪽으로 허벅지가 들리지 않게 한 후 최대한 당긴 상태에서 10초 정도 멈춘 뒤 힘을 풀어준다. 10~20번 반복한다."
                android:textColor="@color/text_color"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>